generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum AnalysisType {
  summary
  sentiment
  themeExtraction
}

model Analysis {
  id String @id @default(uuid())
  result String
  confidence Float
  analysisType AnalysisType
  createdAt DateTime @default(now())

}
